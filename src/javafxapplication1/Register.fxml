<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="javafxapplication1.RegisterController">
   <children>
      <VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label prefHeight="50.0" prefWidth="142.0" text="Register">
               <font>
                  <Font size="34.0" />
               </font>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="usernameField" maxWidth="-Infinity" prefHeight="35.0" prefWidth="300.0" promptText="Enter Username">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </TextField>
            <TextField fx:id="emailField" layoutX="160.0" layoutY="108.0" maxWidth="-Infinity" prefHeight="35.0" prefWidth="300.0" promptText="Enter E-mail">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </TextField>
            <PasswordField fx:id="passwordField" maxWidth="-Infinity" prefHeight="35.0" prefWidth="300.0" promptText="Enter Password">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </PasswordField>
            <Button fx:id="registerButton" mnemonicParsing="false" onAction="#registerUser" prefHeight="62.0" prefWidth="203.0" text="Register">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="btnLoginLink" mnemonicParsing="false" onAction="#goToLogin" prefHeight="62.0" prefWidth="203.0" text="Back to Login">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </Button>
            <Label fx:id="lblRegisterMsg" prefHeight="18.0" prefWidth="250.0" textFill="#ef0505">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </Label>
         </children>
      </VBox>
   </children>
</AnchorPane>
