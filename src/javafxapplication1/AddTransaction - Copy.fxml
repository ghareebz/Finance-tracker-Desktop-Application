         <top>
            <VBox prefHeight="420.0" prefWidth="600.0" BorderPane.alignment="CENTER">
               <children>
                  <Label text="Transaction Type">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                     <VBox.margin>
                        <Insets left="210.0" top="20.0" />
                     </VBox.margin>
                  </Label>
                  <HBox prefHeight="38.0" prefWidth="600.0">
                     <children>
                        <RadioButton fx:id="incomeRadio" mnemonicParsing="false" selected="true" text="Income" textFill="#36bc28">
