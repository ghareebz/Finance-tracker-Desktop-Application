                     </VBox.margin>
                  </Label>
                  <TextField fx:id="amountField" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="25.0" prefWidth="250.0">
                     <VBox.margin>
                        <Insets left="160.0" top="10.0" />
                     </VBox.margin>
                  </TextField>
                  <Label layoutX="230.0" layoutY="109.0" text="Enter Date">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                     <VBox.margin>
                        <Insets left="235.0" top="10.0" />
                     </VBox.margin>
                  </Label>
                  <DatePicker fx:id="datePicker">
                     <VBox.margin>
                        <Insets left="190.0" top="10.0" />
                     </VBox.margin>
                  </DatePicker>
                  <Label layoutX="245.0" layoutY="186.0" text="Enter Category">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                     <VBox.margin>
                        <Insets left="210.0" top="10.0" />
                     </VBox.margin>
                  </Label>
                  <TextField fx:id="categoryField" layoutX="170.0" layoutY="150.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="25.0" prefWidth="250.0">
                     <VBox.margin>
                        <Insets left="160.0" top="10.0" />
                     </VBox.margin>
                  </TextField>
                  <Label layoutX="220.0" layoutY="263.0" text="Optional Note">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
