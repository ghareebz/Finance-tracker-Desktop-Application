                              <Insets left="170.0" top="10.0" />
                           </HBox.margin>
                           <font>
                              <Font name="Gill Sans Ultra Bold" size="15.0" />
                           </font>
                           <toggleGroup>
                              <ToggleGroup fx:id="typeGroup" />
